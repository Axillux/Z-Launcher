<UserControl xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vm="clr-namespace:ZLauncher.ViewModels"
x:Class="ZLauncher.Views.ModsView"
x:DataType="vm:ModsViewModel">

<Grid RowDefinitions="Auto, *" Margin="40">
    <TextBlock Text="МОДЫ" FontSize="32" FontWeight="Bold" Foreground="White" Grid.Row="0"/>
    
    <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
        <ItemsControl ItemsSource="{Binding Mods}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#1A1A1A" CornerRadius="5" Margin="0,0,0,10" Padding="15">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <PathIcon Grid.Column="0" Data="{StaticResource archive_regular}" Foreground="{DynamicResource PrimaryGreen}" Width="24" Height="24" Margin="0,0,15,0"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                            
                            <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsEnabled}" OnContent="ВКЛ" OffContent="ВЫКЛ"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Grid>
</UserControl>
