<UserControl xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vm="clr-namespace:ZLauncher.ViewModels"
x:Class="ZLauncher.Views.HomeView"
x:DataType="vm:HomeViewModel">

<Grid RowDefinitions="Auto, *, Auto" Margin="40">
    
    <!-- Верхняя часть -->
    <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
        <StackPanel Grid.Column="0">
            <TextBlock Text="Майнкрафт" Foreground="White" FontSize="48" FontWeight="Black" LetterSpacing="2"/>
            <TextBlock Text="Клаб" Foreground="{DynamicResource PrimaryGreen}" FontSize="48" FontWeight="Black" LetterSpacing="2" Margin="0,-15,0,0"/>
        </StackPanel>
        
        <Border Grid.Column="1" BorderBrush="{DynamicResource PrimaryGreen}" BorderThickness="1" CornerRadius="5" Padding="10,5" VerticalAlignment="Top">
            <TextBlock Text="{Binding ServerStatus}" Foreground="{DynamicResource PrimaryGreen}"/>
        </Border>
    </Grid>
    
    <!-- Новости -->
    <Border Grid.Row="1" BorderBrush="#333" BorderThickness="1" Background="#1A1A1A" CornerRadius="10" Margin="0,30">
        <Grid RowDefinitions="Auto, *">
            <TextBlock Text="Новости" Foreground="White" FontSize="18" Margin="20,15"/>
            
            <ScrollViewer Grid.Row="1" Margin="0,0,0,15">
                <ItemsControl ItemsSource="{Binding News}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                             <Border BorderBrush="#333" BorderThickness="0,0,0,1" Margin="20,5">
                                <StackPanel Spacing="5" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryGreen}" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                                        <TextBlock Text="{Binding Date}" Foreground="Gray" FontSize="12" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                                    </DockPanel>
                                    <TextBlock Text="{Binding Content}" Foreground="LightGray" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
    
    <!-- Нижняя часть -->
    <StackPanel Grid.Row="2" Spacing="10">
        <ProgressBar Value="{Binding Progress}" Maximum="100" Height="4" Foreground="{DynamicResource PrimaryGreen}" Background="#333"/>
        <TextBlock Text="{Binding StatusText}" Foreground="Gray" HorizontalAlignment="Center"/>
        
        <Button Classes="play" Command="{Binding LaunchCommand}">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <PathIcon Data="{StaticResource games_regular}"/>
                <TextBlock Text="ИГРАТЬ"/>
            </StackPanel>
        </Button>
    </StackPanel>

</Grid>
</UserControl>
