<Application xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
x:Class="ZLauncher.App"
RequestedThemeVariant="Dark">

<!-- GLOBAL RESOURCES (Colors) GO HERE -->
<Application.Resources>
    <SolidColorBrush x:Key="PrimaryGreen">#39FF14</SolidColorBrush>
    <SolidColorBrush x:Key="DarkBackground">#111111</SolidColorBrush>
    <SolidColorBrush x:Key="LightBackground">#222222</SolidColorBrush>
    <SolidColorBrush x:Key="TextWhite">#FFFFFF</SolidColorBrush>
</Application.Resources>

<Application.Styles>
    <FluentTheme />
    
    <!-- Button Style: Navigation -->
    <Style Selector="Button.nav">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryGreen}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <!-- Button Hover State -->
    <Style Selector="Button.nav:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#3339FF14"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Button Style: Play -->
    <Style Selector="Button.play">
        <Setter Property="Background" Value="{DynamicResource PrimaryGreen}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="40,15"/>
    </Style>
    
</Application.Styles>
</Application>
